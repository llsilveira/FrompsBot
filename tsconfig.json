{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "noEmitOnError": true,

    "allowJs": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["./src/**/*"]
}
